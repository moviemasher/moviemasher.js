{
  "extends": "./dev/tsconfig/lit.json",
  "compilerOptions": {
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strict": false,
    "composite": true,
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true
  },

  "include": [
    "packages/**/*.ts",
    "examples/**/*.ts",
    "images/**/*.ts"
  ],
  "exclude": [
    "**/dist/**/*",
    "packages/**/src/**/*.e2e.ts",
    "packages/**/src/**/*.test.ts",
  ]
}
