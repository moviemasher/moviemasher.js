{
  "extends": "./dev/tsconfig/lit.json",

  "compilerOptions": {
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strict": false,
    "composite": true,
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true
  },

  "include": [
    "**/src/*.ts",
    "**/src/**/*.ts"

  ],
  
  "exclude": [
    "**/node_modules", 
    "**/*.test.ts", "**/*.test.e2e.ts", 
    "**/dist/*",
  ]
}
