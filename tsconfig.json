{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./dev/tsconfig/base.json",
  "compilerOptions": {
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strict": false,
    "composite": true,
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true
  },

  "include": [
    "packages/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "**/dist/**/*",
  ]
}
