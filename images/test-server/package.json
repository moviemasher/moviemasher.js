{
  "name": "@moviemasher/test-server",
  "description": "Runs all Movie Masher server tests",
  "type": "module",
  "scripts": {
    "test-text": "ffmpeg -i /app/temporary/cache/text.svg",
    "test-ffmpeg": "ffmpeg -y -filter_complex 'color=size=24000x2000:duration=1:rate=1:color=black,drawtext=fontfile=/app/temporary/cache/1fe02cf3faae3032e16727ff06364759.ttf:textfile=/app/temporary/cache/3ed25eb6f503d1597df66d4de848f624.txt:fontsize=1000:fontcolor=red:box=1:boxcolor=white:x=(w-text_w)/2:y=1000:text_align=center:y_align=baseline' /app/temporary/test.png",
    "test-svg-text": "ffmpeg -y -r 2 -s 500x500 -i /pacifico-%02d.svg -t 2 -frames:v 4 -r 2 -c:v libx264 -pix_fmt yuv420p /app/temporary/pacifico.mp4",
    "test-fc-scan": "fc-scan -b /app/temporary/assets/font/lobster/lobster.ttf",
    "test-do": "node ./dev/jsdom.mjs",
    "clean": "rm -rf /app/temporary/output/*",
    "create": "mkdir /app/temporary/cache",
    
    "test-ts": "run-s clean test-ts",
    "test": "node --loader tsx --test ./src/encode.test.ts"
  },
  "dependencies": {
    "@moviemasher/server-lib": "5.2.0"
  },
  "devDependencies": {
    "tsx": "3.12.7",
    "jsdom": "23.0.1"
  },
  "peerDependencies": {},
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "homepage": "https://moviemasher.com",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "version": "5.2.0"
}