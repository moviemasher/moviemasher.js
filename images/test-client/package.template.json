{
  "name": "@moviemasher/test-client",
  "description": "Runs all Movie Masher client tests",
  "scripts": {
    "test-component": "web-test-runner",
    "start": "web-dev-server --node-resolve --open --watch",
    "test-core-client": "node --loader tsx --test ../../packages/lib/shared/src/Client/**/*.test.ts ../../packages/lib/shared/src/Client/*.test.ts",
    "test-runtime-client": "node --loader tsx --test ../../packages/runtime/client/src/**/**/*.test.ts ../../packages/runtime/client/src/**/*.test.ts",
    "test": "run-s test-component"
  },
  "dependencies": {
    "lit": "dependencies"
  },
  "devDependencies": {
    "@open-wc/testing": "3.2.0",
    "@web/dev-server-esbuild": "0.4.1",
    "@web/dev-server": "0.3.0",
    "@web/test-runner-playwright": "0.10.1",
    "@web/test-runner": "0.17.0",
    "rollup": "dependencies", 
    "tsx": "3.12.7",
    "eslint-plugin-mocha": "^10.1.0",
    "web-test-runner-screenshot": "^1.2.0"
  },
  "peerDependencies": {
    "@moviemasher/lib-client": "5.2.0"
  }
}
