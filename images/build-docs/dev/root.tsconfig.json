{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2022", "ES2021", "ES2020", "ES2019", "ES2018", "ES2017", "ES2016", "ES2015", "ES5", "ES6"],
    "module": "ESNext",
    "moduleResolution": "Bundler",    
    "noImplicitOverride": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": false,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ESNext",
    "traceResolution": false
  },
  "include": ["packages/**/src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.e2e.ts", "**/node_modules/**/*", "packages/**/node_modules/**/*"]
}
