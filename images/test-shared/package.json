{
  "name": "@moviemasher/test-shared",
  "version": "5.2.0",
  "description": "Runs all Movie Masher shared tests",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "homepage": "https://moviemasher.com",
  "scripts": {
    "test-core-lib": "node --loader tsx --test ../../packages/@moviemasher/shared-lib/src/*.test.ts ../../packages/@moviemasher/shared-lib/src/**/*.test.ts ../../packages/@moviemasher/shared-lib/src/**/**/*.test.ts",

    "test-ts": "run-s clean test-ts",
    
    "clean": "rm -rf /app/temporary/test-shared/*",
    "create": "mkdir /app/temporary/test-shared/cache",
    "test": "node --experimental-global-customevent --loader tsx --test ./src/*.test.ts"
  },
  "dependencies": {
    "@moviemasher/shared-lib": "5.2.0"
  },
  "devDependencies": {
    "tsx": "3.12.7",
    "npm-run-all": "^4.1.5"
  }
}