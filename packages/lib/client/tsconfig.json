{
  "extends": "../../../dev/tsconfig/lit.json",
  "compilerOptions": {
    "rootDir": "./src",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "off",
          "no-missing-import": "warning",
          "no-unused-locals": "off"
        }
      }
    ]
  },
  "exclude": [
    "**/dist/*",
    "src/**/*.e2e.ts", 
    "src/**/*.test.ts"
  ],
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ]
}