{
  "name": "@moviemasher/theme-default",
  "version": "5.1.2",
  "description": "Movie Masher Theme Plugin - version 5.1.2",
  "main": "umd/theme-default.js",
  "module": "esm/theme-default.js",
  "types": "esm/theme-default.d.ts",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "homepage": "https://moviemasher.com",
  "peerDependencies": {
    "@moviemasher/client-react": "5.1.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "react-icons": "4.7.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/node": "18.13.0"
  },
  "scripts": {
    "build-css": "cat src/css/* > moviemasher.css",
    "build-esm": "esbuild src/index.ts --sourcemap --bundle --platform=browser --outfile=esm/theme-default.js",
    "build-esm-min": "esbuild src/index.ts --bundle --platform=browser --outfile=esm/theme-default.min.js --minify",
    "build-umd-min": "rollup --config dev/rollup/umd.min.config.js",
    "build-umd": "rollup --config dev/rollup/umd.config.js",
    "copy-types": "cp umd/theme-default.d.ts esm/theme-default.d.ts",
    "build": "run-s build-esm build-esm-min build-umd build-umd-min build-css copy-types"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md",
    "displayName": "theme-default",
    "tsconfig": "./dev/tsconfig.json"
  }
}
