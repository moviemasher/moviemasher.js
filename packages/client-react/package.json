{
  "name": "@moviemasher/client-react",
  "version": "5.0.7",
  "description": "Movie Masher Client Plugin implemented in ReactJS - version 5.0.7",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "type": "module",
  "types": "dist/client-react.d.ts",
  "license": "MPL-2.0",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "homepage": "https://moviemasher.com",
  "peerDependencies": {
    "@moviemasher/moviemasher.js": "5.0.7",
    "@moviemasher/icons-default": "5.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/node": "15.6.1"

  },
  "scripts": {
    "develop": "rollup --config dev/rollup/esm.config.js --watch",
    "build-css": "cat dev/css/* > dist/moviemasher.css",
    "build-esm": "run-s build-rollup build-css",
    "build-types": "tsc --project dev/tsconfig.json --declaration --emitDeclarationOnly --declarationMap --outFile dist/client-react.d.ts",
    "build-cjs": "rollup --config dev/rollup/cjs.config.js",
    "build-rollup": "rollup --config dev/rollup/esm.config.js",
    "watch-esm": "rollup --watch --config dev/rollup/esm.config.js",
    "build": "run-s clean build-types build-esm build-cjs",
    "clean": "rimraf dist"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
