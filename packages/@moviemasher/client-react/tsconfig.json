{
  "extends": "../../../dev/tsconfig/lit.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "module": "ESNext",
    "rootDir": "./src",
    "jsx": "react",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "warning",
          "no-missing-import": "off",
          "no-invalid-css": "off",
          "no-unknown-attribute": "off"
        }
      }
    ]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts", 
    "./src/*.tsx",
    "./src/**/*.tsx", 

    
  ]
}
