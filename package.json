{
  "name": "@moviemasher/moviemasher-core",
  "description": "JavaScript video editor, encoder, switcher - version 5.1.2",
  "homepage": "https://moviemasher.com",
  "type": "commonjs",
  "source": "index",
  "main": "images/standalone/private/server.js",
  "version": "5.1.2",
  "license": "MIT",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "scripts": {
    "start": "npm run up -w @moviemasher/standalone",
    "stop": "npm run down -w @moviemasher/standalone",
    "logs": "npm run logs -w @moviemasher/standalone",
    
    "build": "docker compose --env-file dev/local.env --file images/builder/dev/docker-compose.yml run --rm builder",
    "build-esm": "npm run build esm",
    
    "test": "npm run build-esm && npm run test-run",
    "test-run": "docker compose --env-file dev/local.env --file images/tester/dev/docker-compose.yml run --rm -it tester",

    "docker-build":  "docker compose --env-file dev/local.env --file images/${npm_config_image}/dev/docker-compose.yml build",

    "lint-verbose": "eslint --quiet --no-ignore src/**/*.[jt]s",
    "lint": "eslint src/**/*.ts",
    "publish": "npm publish --access public --workspace @moviemasher/${npm_config_space}"
  },
  "workspaces": [
    "images/*",
    "packages/*",
    "workspaces/*"
  ]
}
