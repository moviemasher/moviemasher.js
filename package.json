{
  "name": "@moviemasher/moviemasher-core",
  "description": "JavaScript video editor, encoder, switcher - version 5.1.0",
  "homepage": "https://moviemasher.com",
  "type": "commonjs",
  "source": "index",
  "main": "workspaces/example-express-react/dist/server.js",
  "version": "5.1.0",
  "license": "MPL-2.0",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "scripts": {
    "build-bundler": "docker-compose --file dev/build/docker-compose.yml build bundler",
    "build-image": "docker build -f dev/image/Dockerfile.cnf -t moviemasher/moviemasher.js:5.1.0 .",
    "build-tester": "docker-compose --file dev/tester/docker-compose.yml build tester",
    "build": "docker-compose --file dev/build/docker-compose.yml run --rm bundler",
    "stop": "docker-compose --file dev/image/docker-compose.yml down -v",
    "logs": "docker-compose --file dev/image/docker-compose.yml logs -f",
    "start": "docker-compose --file dev/image/docker-compose.yml up -d",
    "ffmpeg": "docker compose --file dev/test/ffmpeg/docker-compose.yml run --rm -it ffmpeg",
    "jest": "docker-compose --file dev/test/docker-compose.yml run --rm test",
    "lint-verbose": "eslint --quiet --no-ignore src/**/*.[jt]s",
    "lint": "eslint src/**/*.ts",
    "publish-client": "npm publish --access public --workspace @moviemasher/client-react",
    "publish-core": "npm publish --access public --workspace @moviemasher/moviemasher.js",
    "publish-server": "npm publish --access public --workspace @moviemasher/server-express",
    "test-clean": "rm -rf temporary/test/*",
    "test-help": "jest -h",
    "delete-temporary": "rm -rf temporary/test/* ; ",
    "test-jest": "jest --config dev/test/jest.config.js",
    "test-rendering": "npm run test -w test-rendering",
    "build-rendering": "npm run build -w test-rendering",
    "test-verbose": "jest --verbose --coverage --config dev/test/jest.config.js",
    "test-watch": "jest --verbose  --watch --config dev/test/jest.config.js",
    "test": "docker-compose --file dev/tester/docker-compose.yml run --rm tester"
  },
  "workspaces": [
    "workspaces/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/css-font-loading-module": "^0.0.7",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^28.0.3",
    "@types/jest-environment-puppeteer": "^5.0.2",
    "@types/jest-image-snapshot": "^5.1.0",
    "@types/node": "15.6.1",
    "@types/puppeteer": "^5.4.6",
    "typescript": "4.6.4"
  }
}
