{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext", "ES2022", "ES2021", "ES2020", "ES2019", "ES2018", "ES2017", "ES2016", "ES2015", "ES5", "ES6"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "rootDir": "./",
    "target": "ESNext"
  },
  "include": [
    "packages/client/**/src/*", 
    "packages/core/**/src/*", 
    "packages/protocol/**/src/*", 
    "packages/server/**/src/*", 
    "packages/theme/**/src/*"
  ],
  "exclude": [
    "node_modules", "*.mjs"
  ]
}
